{
  "manifest_version": 3,
  "name": "ServiceNow Triage Copilot",
  "version": "2.0.0",
  "description": "AI-powered ticket classification and analysis for ServiceNow. Generate reports, executive emails, and invoices instantly.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.service-now.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.service-now.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}